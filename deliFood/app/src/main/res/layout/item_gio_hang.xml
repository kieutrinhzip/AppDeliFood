<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_new"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#3d33a8"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/item_giohang_tensp"
                android:text="Tên sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_giohang_gia"
                    android:textSize="15.4sp"
                    android:layout_gravity="center"
                    android:text="150000"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="6"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:padding="5dp"
                    android:elevation="80dp"
                    android:background="#E8E0E0"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/remove"
                        android:id="@+id/item_giohang_tru"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/item_giohang_soluong"
                        android:text="1"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/add"
                        android:id="@+id/item_giohang_cong"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/item_giohang_giasp2"
                    android:text="250000đ"
                    android:layout_gravity="center"
                    android:textSize="15.4sp"
                    android:gravity="center|center_vertical"
                    android:layout_weight="8"
                    android:textColor="@android:color/holo_red_light"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>